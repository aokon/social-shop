<h1 class="text-2xl font-bold mb-6">Category: <%= @category.name %></h1>

<div class="flex flex-wrap">
  <% @products.each do |p| %>
    <div class="w-1/4 p-4 ">
      <div class=" mb-4 border border-black bg-gray-300 p-2 text-center flex flex-col">
        <h3 class="mb-4 text-xl font-bold"><%= p.title %></h3>
        <%= image_tag p.image_url, alt: p.title %>
        <div class="my-2">
          <%= number_to_currency p.price, unit: "$" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="my-2">
  <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
</div>
